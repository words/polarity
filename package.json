{
  "name": "polarity",
  "version": "1.0.0",
  "description": "Detect the polarity (sentiment) of text",
  "license": "MIT",
  "keywords": [
    "natural",
    "language",
    "afinn",
    "sentiment",
    "subjective",
    "subjectivity",
    "polarity",
    "opinion",
    "emotion",
    "attitude"
  ],
  "repository": "https://github.com/wooorm/polarity",
  "bugs": "https://github.com/wooorm/polarity/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js",
    "emoji.json"
  ],
  "dependencies": {
    "afinn-111": "^1.1.0",
    "has": "^1.0.1"
  },
  "devDependencies": {
    "browserify": "^13.1.1",
    "emoji-emotion": "^1.0.0",
    "esmangle": "^1.0.1",
    "gemoji": "^4.0.0",
    "nyc": "^10.0.0",
    "remark-cli": "^2.1.0",
    "remark-preset-wooorm": "^1.0.0",
    "tape": "^4.6.3",
    "xo": "^0.17.1"
  },
  "scripts": {
    "build-md": "remark . -qfo",
    "build-emoji": "node build",
    "build-bundle": "browserify index.js --bare -s polarity > polarity.js",
    "build-mangle": "esmangle polarity.js > polarity.min.js",
    "build": "npm run build-md && npm run build-emoji && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run build && npm run lint && npm run test-api"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "xo": {
    "space": true,
    "rules": {
      "guard-for-in": "off"
    },
    "ignores": [
      "polarity.js"
    ]
  },
  "remarkConfig": {
    "presets": "wooorm"
  }
}
